<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignUp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mainbg">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo2"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATE "
                    android:textSize="25dp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT"
                    android:textStyle="bold"
                    android:fontFamily="@font/catamaranb"
                    android:textSize="25dp"
                    android:textColor="#ffffff"/>
            </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#fff"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/signup_username_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="Username"
            android:paddingLeft="50dp"

            android:digits="abcdefghijklmnopqrstuvwxyz1234567890_"

            />

        <EditText
            android:id="@+id/signup_email_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="Email"
            android:paddingLeft="50dp"

            android:inputType="textEmailAddress"
            android:digits="abcdefghijklmnopqrstuvwxyz@.1234567890_"
            />


        <EditText
            android:id="@+id/signup_password_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="Password"
            android:paddingLeft="50dp"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/signup_REpassword__et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:hint="Confirm Password"
            android:paddingLeft="50dp"
            />

        <ImageView
            android:id="@+id/signup_Btn"
            android:padding="2sp"
            android:layout_marginTop="40dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:rotation="180"
            android:background="@drawable/circle"
            android:layout_gravity="center"
            />
    </LinearLayout>


</LinearLayout>