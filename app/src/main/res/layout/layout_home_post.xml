<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/layout_home_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            android:src="@drawable/avatar"/>
        <TextView
            android:id="@+id/layout_home_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10sp"
            android:text="UPLOADER"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="12dp"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/layout_home_post_image"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_image"
        tools:layout_editor_absoluteY="43dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


            <ImageView
                android:id="@+id/layout_home_like"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/circle2d"
                android:padding="6sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/heart2"

                />
            <TextView
                android:id="@+id/likeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:layout_marginRight="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"/>




            <ImageView
                android:id="@+id/layout_home_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle2d"
                android:padding="6sp"
                android:layout_gravity="center"
                android:src="@drawable/comment"
                tools:layout_editor_absoluteX="161dp" />
            <TextView
                android:id="@+id/commentNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:textColor="#000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:padding="6sp"
                android:src="@drawable/share_icon"
                app:tint="@color/orange" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>