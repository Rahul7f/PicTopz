<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryPhotoUpload"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/upload_image_as_user"
        android:src="@drawable/photoupload_def"
        android:layout_margin="25dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_photo_button"
        android:layout_gravity="center"
        android:text="upload as post"
        android:layout_margin="25dp"
        android:textColor="#fff"
        android:backgroundTint="@color/orange"
        android:background="@drawable/button_backgroung"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upload_story_button"
        android:layout_gravity="center"
        android:text="Upload as story"
        android:textColor="#fff"
        android:layout_margin="25dp"
        android:backgroundTint="@color/orange"
        android:background="@drawable/button_backgroung"
        />

</LinearLayout>